---
import NavBar from "./lib/nav.svelte";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>AndromedaDB</title>
    <style is:global lang="scss">
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap");
      :root {
        --font-color: white;
        --mainbackground: #01000e;
        --secbackground: #000006;
        --animation-curve: cubic-bezier(0.97, 1.09, 0.41, 0.67);
      }
      html,
      body {
        height: auto;
        width: 100vw;
        overflow-x: hidden;
        margin: 0;
        background-color: var(--secbackground);
        font-family: "Poppins", sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        color: var(--font-color);
      }
      *::-webkit-scrollbar-track {
        width: 10px;
        background-color: transparent;
        box-shadow: outset 10px 10px 10px 12px lightblue;
      }
      *::-webkit-scrollbar {
        width: 5px;
      }
      *::-webkit-scrollbar-thumb {
        background-color: transparentize(white, 0.45);
        background-clip: content-box;
      }
      *::-moz-scrollbar-track {
        width: 10px;
        background-color: transparent;
        box-shadow: outset 10px 10px 10px 12px lightblue;
      }
      *::-moz-scrollbar {
        width: 5px;
      }
      *::-moz-scrollbar-thumb {
        background-color: transparentize(white, 0.45);
        background-clip: content-box;
      }
      main {
        margin-top: 150px;
        font-family: "Poppins", sans-serif;
        display: flex;
        align-items: center;
        width: 100vw;
        margin-left: 0;
        margin-right: 0;
        height: 100vh;
        flex-direction: column;
      }
      /*Animations*/
      @keyframes load {
        from {
          opacity: 0;
          transform: translateX(-20px);
        }
        to {
          opacity: 1;
          transform: translateX(0px);
        }
      }
    </style>
    <style lang="scss">
      main {
        .head {
          width: 100%;
          height: 55px;
          display: flex;
          font-size: 8vw;
          justify-content: center;
          color: var(--font-color) !important;
          color: white;
          animation: load 1s var(--animation-curve);
        }
        .moto {
          display: flex;
          justify-content: center;
          width: 100%;
          animation: load 2s var(--animation-curve);
          color: gray;
        }
      }
      @media only screen and (min-width: 627px) {
        .head {
          font-size: 50.16px !important;
        }
      }
      .download {
        width: 150px;
        height: 50px;
        font-size: 20px;
        background-color: var(--secbackground);
        color: var(--font-color);
        border: 0;
		box-shadow: none;
      }
      .download:hover {
        cursor: pointer;
      }
	  .button-wrapper{
		height: 52px;
		width: 152px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(45deg, lime, blue);
	  }
      //   Animations
    </style>
  </head>
  <body>
    <NavBar client:load/>
    <main>
      <h1 class="head">AndromedaDB</h1>
      <h3 class="moto"><b>The Database of Your Dreams</b></h3>
      <div class="button-wrapper">
        <button class="download">Download Now</button>
      </div>
    </main>
  </body>
</html>
